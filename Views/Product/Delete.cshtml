@model UserAuthApp_MVC.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div>
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này không?</h4>
    <div>
        <strong>Tên sản phẩm:</strong> @Model.Name<br />
        <strong>Giá:</strong> @Model.Price<br />
        <strong>Mô tả:</strong> @Model.Description<br />
        <strong>Số lượng:</strong> @Model.Quantity<br />
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
