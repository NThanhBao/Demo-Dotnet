@model UserAuthApp_MVC.Models.User

@{
    ViewData["Title"] = "Đăng Ký";
}
<head>
    <link rel="stylesheet" href="/Register.cshtml.css" />
</head>
<div class="form-container">
    <h3>Đăng Ký</h3>
    <form method="post" action="/Auth/Register">
        <div class="form-group">
            <label for="username">Tên người dùng:</label>
            <input type="text" id="username" name="Username" class="form-control" required />
            @* Hiển thị thông báo lỗi nếu có *@
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu:</label>
            <input type="password" id="password" name="Password" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="Email" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="phone">Số điện thoại:</label>
            <input type="tel" id="phone" name="Phone" class="form-control" required pattern="[0-9]{10}" title="Số điện thoại phải có 10 chữ số." />
        </div>
        <button type="submit" class="btn btn-secondary">Đăng Ký</button>
    </form>
</div>

<div class="form-footer">
    <p>Đã có tài khoản? <a href="/Auth/Login">Đăng Nhập</a></p>
</div>
